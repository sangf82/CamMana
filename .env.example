# CamMana Environment Configuration
# Copy this file to .env and customize as needed

# =============================================================================
# DATA PATHS
# =============================================================================
# Root directory for all data (database, logs, images, etc.)
# Leave empty to use default ./database folder
CAMMANA_DATA_DIR=

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# =============================================================================
# API SETTINGS
# =============================================================================
API_TITLE=cam_mana
API_VERSION=2.0.0

# =============================================================================
# CAMERA DEFAULTS
# =============================================================================
CAMERA_DEFAULT_USER=admin
CAMERA_DEFAULT_PASSWORD=

# =============================================================================
# EXTERNAL AI API
# =============================================================================
# Modal.run API endpoint for truck detection and other AI functions
AI_API_URL=https://thpttl12t1--truck-api-fastapi-app.modal.run

# =============================================================================
# AUTHENTICATION
# =============================================================================
# JWT secret key (generate a secure random string for production)
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# SYNC SETTINGS
# =============================================================================
# Auto-start Zeroconf advertising on Master mode
SYNC_AUTO_ADVERTISE=true
